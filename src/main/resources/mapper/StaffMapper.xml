<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.StaffMapper">
    <insert id="insert" parameterType="staff">
        INSERT INTO t_staff(name,sex,age,number,address,position,status)
        VALUES (#{name},#{sex},#{age},#{number},#{address},#{position},#{status})
    </insert>
    <update id="update" >
        UPDATE t_staff
        SET status=0
        WHERE id=#{id}
    </update>
    <select id="queryAll" resultType="staff">
        SELECT * FROM t_staff WHERE status=1
    </select>
</mapper>