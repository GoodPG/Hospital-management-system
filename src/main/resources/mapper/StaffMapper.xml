<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.StaffMapper">
    <insert id="insert" parameterType="staff">
        INSERT INTO t_staff(name,sex,age,number,address,position,status,department)
        VALUES (#{name},#{sex},#{age},#{number},#{address},#{position},#{status},#{department})
    </insert>
    <update id="update" >
        UPDATE t_staff
        SET status=0
        WHERE id=#{id}
    </update>
    <select id="queryAll" resultType="staff">
        SELECT * FROM t_staff WHERE status=1
    </select>
    <select id="queryById" resultType="staff">
        select * from t_staff where id=#{id} and status=#{status}
    </select>
    <select id="queryByName" resultType="staff">
        select * from t_staff where name=#{name} and status=#{status}
    </select>
    <select id="queryBySex" resultType="staff">
        select * from t_staff where sex=#{sex} and status=#{status}
    </select>
    <select id="queryByDepartment" resultType="staff">
        select * from t_staff where department=#{department} and status=#{status}
    </select>
</mapper>