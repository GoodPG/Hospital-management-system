<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.AdminMapper">
    <insert id="insert" parameterType="admin">
       insert into t_department(id,name,director,miaoshu,create_time,status)
        values(#{id},#{name},#{director},#{miaoshu},#{create_time},1)
    </insert>
    <update id="update" >
        UPDATE t_department
        SET name=#{name},director=#{director},miaoshu=#{miaoshu},create_time=#{create_time}
        WHERE id=#{id}
    </update>
    <select id="queryAll" resultType="admin">
        SELECT *
        FROM t_department WHERE status=1
    </select>
    <select id="queryById" resultType="admin">
        select * from t_department where id=#{id}
    </select>
    <select id="queryByID" resultType="admin">
        select * from t_department where id=#{id} and status=#{status}
    </select>
    <select id="queryByName" resultType="admin">
        select * from t_department where name=#{name} and status=#{status}
    </select>
    <select id="delete">
        update t_department
        set status=0
        where id=#{id}
    </select>
</mapper>